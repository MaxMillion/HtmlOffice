{
  "name": "Document Viewer",
  "description": "Document Viewer is a simple reader which allows you to read Office documents on Firefox OS device.",
  "type": "privileged",
  "launch_path": "/index.html",
  "version": "3.0",
  "icons": {
    "48": "/icons/icon48.png",
    "60": "/icons/icon60.png",
    "64": "/icons/icon64.png",
    "90": "/icons/icon90.png",
    "120": "/icons/icon120.png",
    "128": "/icons/icon128.png",
    "135": "/icons/icon135.png"
  },
  "developer": {
    "name": "Mozilla Online Ltd.",
    "url": "http://www.firefox.com.cn/"
  },
  "permissions": {
    "device-storage:sdcard": {
      "description": "Pick .docx .xlsx .pptx files from the SD card.",
      "access": "readwrite"
    }
  },
  "locales": {
    "en-US": {
      "name": "Document Viewer",
      "description": "Document Viewer is a simple reader which allows you to read Office documents on Firefox OS device."
    },
    "zh-CN": {
      "name": "文档阅读器",
      "description": "在Firefox OS设备上打开 Office 文档。"
    }
  },
  "default_locale": "en-US"
}
